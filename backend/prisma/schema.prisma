generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  type      OrgType
  createdAt DateTime @default(now())
  college   College?
  drives    Drive[]
  tests     Test[]
  users     User[]
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  role         UserRole
  orgId        String?
  createdAt    DateTime      @default(now())
  student      Student?
  organization Organization? @relation(fields: [orgId], references: [id])
}

model College {
  id            String       @id @default(uuid())
  orgId         String       @unique
  collegeName   String
  collegeType   CollegeType
  address       String
  contactPerson String
  contactEmail  String
  mobile        String
  maxStudents   Int
  isApproved    Boolean      @default(false)
  createdAt     DateTime     @default(now())
  organization  Organization @relation(fields: [orgId], references: [id])
  departments   Department[]
  students      Student[]

  @@index([orgId])
}

model Department {
  id            String    @id @default(uuid())
  name          String
  collegeId     String
  createdAt     DateTime  @default(now())
  email         String?
  hodName       String?
  phone         String?
  totalFaculty  Int?
  totalStudents Int?
  college       College   @relation(fields: [collegeId], references: [id])
  students      Student[]

  @@unique([name, collegeId])
  @@index([collegeId])
}

model Student {
  id           String       @id @default(uuid())
  rollNo       String
  year         Int
  userId       String       @unique
  collegeId    String
  departmentId String
  createdAt    DateTime     @default(now())
  college      College      @relation(fields: [collegeId], references: [id])
  department   Department   @relation(fields: [departmentId], references: [id])
  user         User         @relation(fields: [userId], references: [id])
  submissions  Submission[]

  @@unique([rollNo, collegeId])
}

model Test {
  id                    String        @id @default(uuid())
  name                  String
  showResultImmediately Boolean       @default(false)
  proctoringEnabled     Boolean       @default(false)
  isPublished           Boolean       @default(false)
  isActive              Boolean       @default(false)
  createdAt             DateTime      @default(now())
  orgId                 String
  rulesId               String
  drives                Drive[]
  organization          Organization  @relation(fields: [orgId], references: [id])
  rules                 Rules         @relation(fields: [rulesId], references: [id])
  sections              TestSection[]
  startTime             DateTime?
  endTime               DateTime?
  submissions           Submission[]
}

model TestSection {
  id        String  @id @default(uuid())
  timeLimit Int
  testId    String
  sectionId String
  section   Section @relation(fields: [sectionId], references: [id])
  test      Test    @relation(fields: [testId], references: [id])
}

model Section {
  id           String        @id @default(uuid())
  sectionName  String
  orgId        String
  isActive     Boolean       @default(true)
  questions    Question[]
  testSections TestSection[]
}

model Question {
  id            String             @id @default(uuid())
  sectionId     String
  type          QuestionType
  difficulty    DifficultyLevel
  correctAnswer String?
  allowedFor    QuestionUsage
  codingMeta    Json?
  createdBy     String
  creatorRole   CreatorRole
  isActive      Boolean            @default(true)
  orgId         String
  questionText  String
  marks         Int                @default(1)   // âœ… ADD
  order         Int                @default(1)   // âœ… ADD
  options       Option[]
  section       Section            @relation(fields: [sectionId], references: [id])
  answers       SubmissionAnswer[]
}

model Submission {
  id          String             @id @default(uuid())
  studentId   String
  testId      String
  score       Int?
  submittedAt DateTime           @default(now())
  student     Student            @relation(fields: [studentId], references: [id])
  test        Test               @relation(fields: [testId], references: [id])   // ðŸ”¥ ADD THIS
  answers     SubmissionAnswer[]
  status      SubmissionStatus   @default(IN_PROGRESS)
}

model SubmissionAnswer {
  id             String     @id @default(uuid())
  submissionId   String
  questionId     String
  selectedAnswer String?
  isCorrect      Boolean?
  marksObtained  Int        @default(0)
  question       Question   @relation(fields: [questionId], references: [id])
  submission     Submission @relation(fields: [submissionId], references: [id])

  @@unique([submissionId, questionId])
}

model PracticeSet {
  id           String     @id @default(uuid())
  name         String
  orgId        String
  sectionTimer Int
  rulesId      String
  visibility   Visibility
  questionIds  Json
  rules        Rules      @relation(fields: [rulesId], references: [id])
}

model Rules {
  id               String        @id @default(uuid())
  totalMarks       Int
  marksPerQuestion Int
  negativeMarking  Boolean
  negativeMarks    Int?
  practiceSets     PracticeSet[]
  tests            Test[]
}

model Drive {
  id          String         @id @default(uuid())
  companyId   String
  testId      String
  isOpenDrive Boolean        @default(false)
  startDate   DateTime
  endDate     DateTime
  description String?
  company     Organization   @relation(fields: [companyId], references: [id])
  test        Test           @relation(fields: [testId], references: [id])
  colleges    DriveCollege[]
}

model DriveCollege {
  id        String @id @default(uuid())
  driveId   String
  collegeId String
  drive     Drive  @relation(fields: [driveId], references: [id])
}

model ProctoringEvent {
  id                 String   @id @default(uuid())
  userId             String
  orgId              String
  orgType            String
  cameraActive       Boolean
  audioActive        Boolean
  tabSwitched        Boolean
  warningCount       Int
  maxWarningsAllowed Int
  timestamp          DateTime @default(now())
}

model ActivityLog {
  id        String   @id @default(uuid())
  userId    String
  orgId     String
  action    String
  ipAddress String
  location  String
  timestamp DateTime @default(now())
}

model CodingSubmission {
  id             String         @id @default(uuid())
  testId         String
  userId         String
  code           String
  language       String
  evaluationMode EvaluationMode
  score          Int
  feedback       String?
  createdAt      DateTime       @default(now())
}

model Notification {
  id          String   @id @default(uuid())
  recipientId String
  message     String
  type        String
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Option {
  id         String   @id @default(uuid())
  questionId String
  optionCode String
  optionText String
  isCorrect  Boolean
  question   Question @relation(fields: [questionId], references: [id])
}

enum OrgType {
  COLLEGE
  COMPANY
}

enum UserRole {
  SUPER_ADMIN
  COLLEGE_ADMIN
  COMPANY_ADMIN
  STUDENT
}

enum CollegeType {
  ENGINEERING
  DEGREE
  POLYTECHNIC
  OTHER
}

enum TestType {
  APTITUDE
  CODING
  MIXED
}

enum TestStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum QuestionType {
  MCQ
  CODING
  APTITUDE
}

enum DifficultyLevel {
  EASY
  MEDIUM
  HARD
}

enum SubmissionStatus {
  IN_PROGRESS
  SUBMITTED
  EVALUATED
}

enum QuestionUsage {
  PRACTICE
  TEST
  BOTH
}

enum Visibility {
  PUBLIC
  PRIVATE
}

enum EvaluationMode {
  COMPILER
  MANUAL
  AI
}

enum CreatorRole {
  ADMIN
  COMPANY
}
